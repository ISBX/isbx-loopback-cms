@import "variables.styl"

// import individual .styl files here
@import "../app/dashboard/Dashboard.styl"
@import "../app/login/Login.styl"
@import "../app/register/Register.styl"

body, html
  margin 0
  font-family 'Open Sans', sans-serif
h1, h2, h3, h4, h5, button
  font-family 'Open Sans', sans-serif

a:hover
  text-decoration: none

.no-script-warning
  padding: 10px
  text-align: center

.sticky
  position -webkit-sticky
  position sticky
  top 0px
  z-index 999
  overflow hidden


accordion.list
  .panel-body
    padding-bottom 100px !important
  .highlight
    .panel-heading
      position relative
      background #428bca !important
      color white !important
      cursor pointer !important
    .panel-heading:hover
      color white !important
.pharmacy-item
  position relative
  display grid
  grid-template-columns auto 1fr
  .pharmacy-checkbox
    width 30px
    height 30px
    margin-right 10px
    label
      position absolute !important
      top 5px !important
      margin-top 0px !important
      margin-left 13px !important
