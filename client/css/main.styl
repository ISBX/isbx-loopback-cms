  background: startColor; /* Old browsers */
  background: -moz-linear-gradient(direction, startColor startDistance, midEndColor midEndDistance, midStartColor midStartDistance, endColor endDistance);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(startDistance,startColor), color-stop(midEndDistance,midEndColor), color-stop(midStartDistance,midStartColor), color-stop(endDistance,endColor));
  background: -webkit-linear-gradient(direction, startColor startDistance, midEndColor midEndDistance, midStartColor midStartDistance, endColor endDistance);
  background: -o-linear-gradient(direction, startColor startDistance, midEndColor midEndDistance, midStartColor midStartDistance, endColor endDistance);
  background: -ms-linear-gradient(direction, startColor startDistance, midEndColor midEndDistance, midStartColor midStartDistance, endColor endDistance);
  background: linear-gradient(direction, startColor startDistance, midEndColor midEndDistance, midStartColor midStartDistance, endColor endDistance);
