  .form-control
    margin-bottom: 10px
  .ui-select-bootstrap
    margin-top: 10px
    padding: 3px 0px
  ul
    list-style: none
    margin: 10px 0px
    padding: 0 0
    li
      position: relative
      border: solid 1px #dedede
      border-width: 1px 1px 1px 1px
      padding: 0px 10px
